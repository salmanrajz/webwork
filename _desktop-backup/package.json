{
  "name": "webwork-tracker",
  "version": "1.0.0",
  "description": "Desktop time tracker for WebWork SaaS",
  "author": "WebWork Team",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:win-portable": "electron-builder --win portable",
    "dist:win-nsis": "electron-builder --win nsis",
    "dist:mac": "electron-builder --mac",
    "dist:mac-dmg": "electron-builder --mac dmg",
    "dist:mac-zip": "electron-builder --mac zip",
    "build": "electron-builder --publish=never"
  },
  "dependencies": {
    "active-win": "^8.1.0",
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "electron": "^28.3.3",
    "form-data": "^4.0.0",
    "screenshot-desktop": "^1.15.0",
    "systeminformation": "^5.23.16",
    "uiohook-napi": "^1.3.1"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "files": [
      "src/**/*",
      "dist/**/*",
      ".env.production"
    ],
    "asarUnpack": [
      "node_modules/screenshot-desktop/lib/win32/*.bat",
      "node_modules/screenshot-desktop/lib/win32/*.exe",
      "node_modules/screenshot-desktop/lib/win32/*.manifest",
      "node_modules/screenshot-desktop/lib/darwin/*",
      "node_modules/screenshot-desktop/lib/linux/*"
    ],
    "extraMetadata": {
      "productName": "WebWork Tracker"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "executableName": "WebWork Tracker"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    }
  }
}
